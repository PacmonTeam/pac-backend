{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
